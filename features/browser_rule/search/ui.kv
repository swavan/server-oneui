<OneUIBrowserRuleSearch>:
    size_hint_y: None
    height: "65dp"
    OneUIBox:
        orientation: "horizontal"
        size_hint_y: None
        height: "65dp"
        padding: [ dp(10), dp(5), dp(10), dp(10) ]
        adaptive_height: True
        OneUITextField:
            id: endpoint_identifier_name
            padding: dp(15), dp(10)
            hint_text: "Search Browser Rule - [ Hit Enter ]"
            size_hint: 1, None
            height: "40dp"
            background_color: 0, 0, 0, .3
            foreground_color: 1, 1, 1, 1
            hint_text_color: 1, 1, 1, .4
            cursor_color: 1, 1, 1, 1
            on_text_validate: root.search(self.text)
