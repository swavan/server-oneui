#:import MDNavigationLayout kivymd.uix.navigationdrawer.MDNavigationLayout
#:import MDNavigationDrawer kivymd.uix.navigationdrawer.MDNavigationDrawer

#:import OneUIVerticalBar widgets.drawer.OneUIVerticalBar

#:import OneUIMockPage features.mock.page.OneUIMockPage
#:import OneUIBrowserRulePage features.browser_rule.page.OneUIBrowserRulePage
#:import OneUIHelpPage features.help.page.OneUIHelpPage
#:import OneUIAboutPage features.about.page.OneUIAboutPage
#:import OneUIHomePage features.home.page.OneUIHomePage

<OneUIHomePage>:
    MDGridLayout:
        cols: 1
        rows: 2
        MDToolbar:
            title: "Home"
        MDLabel:
            halign: "center"
            text: "Home page content"
        OneUIGrid:
            cols: 3
            padding: 10, 10, 10, 10
            spacing: 10
            MDCard:
                focus_behavior: True
                ripple_behavior: True
                orientation: "vertical"
                MDBoxLayout:
                    adaptive_height: True


            MDCard:
                focus_behavior: True
                ripple_behavior: True
                orientation: "vertical"

            MDCard:
                focus_behavior: True
                ripple_behavior: True
                orientation: "vertical"

            MDCard:
                focus_behavior: True
                ripple_behavior: True
                orientation: "vertical"

            MDCard:
                focus_behavior: True
                ripple_behavior: True
                orientation: "vertical"

            MDCard:
                focus_behavior: True
                ripple_behavior: True
                orientation: "vertical"
<OneUIPageManager>:
    menuItems: menuItems
    main_screen_manager: main_screen_manager
    OneUIGrid:
        cols: 2
        OneUIVerticalBar:
            id: nav_drawer
            OneUIGrid:
                rows: 3
                OneUIBox:
                    size_hint: 1, None
                    height: dp(70)
                    padding: "6dp"
                    Image:
                        source: 'assets/images/logo/big.png'
                ScrollView:
                    MDList:
                        id: menuItems
                OneUIBox:
                    padding: [ dp(15), dp(10), dp(15), dp(10) ]
                    MDIconButton:
                        icon: "cog"
                        theme_text_color: "Custom"
                        text_color: [ 1, 1, 1, .8]
                    MDIconButton:
                        icon: "location-exit"
                        theme_text_color: "Custom"
                        text_color: [1, 0, 0, .9]
        ScreenManager:
            id: main_screen_manager

            OneUIHomePage:
                name: "home"
                nav_drawer: nav_drawer

            OneUIMockPage:
                name: "mock"
                nav_drawer: nav_drawer

            OneUIBrowserRulePage:
                name: "browser_rule"

            OneUIHelpPage:
                name: "help"

            OneUIAboutPage:
                name: "about"

