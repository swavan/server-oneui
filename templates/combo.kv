#:import OneUIColors configs.color.OneUIColors

<OneUIComboItem>:
    orientation: "vertical"
    md_bg_color: rgba("#2C363F")
    padding: [dp(10), dp(2), dp(2), dp(2)]
    MDLabel:
        hint_text_y: None
        height: dp(25)
        text: root.text
        font_size: "13sp"
        halign: "left"
        color: 1, 1 ,1 , 1

<OneUIComboButton>:
    cols: 2
    row: 1
    combo_field: combo_field
    adaptive_height: True
    OneUITextField:
        id: combo_field
        hint_text: root.placeholder
        foreground_color: 0, 0, 0, 1
        background_color: 0, 0, 0, 0
        on_focus: if self.focus: root.release()
    MDIcon:
        icon: "menu-swap"
        size_hint_x: None
        width: "40dp"


