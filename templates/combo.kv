#:import OneUIColors configs.color.OneUIColors

<OneUIComboItem>:
    orientation: "vertical"
    padding: [dp(0), dp(0.5)]
    md_bg_color: rgba("#FFFFFF")
    OneUIBox:
        padding: [dp(10), dp(0)]
        md_bg_color: rgba("#2C363F")
        MDLabel:
            text: root.text
            halign: "left"
            color: 1, 1 ,1 , 1

<OneUIComboButton>:
    cols: 2
    md_bg_color: [ 1, 1, 1, 1 ]
    combo_field: combo_field
    size_hint: 1, None
    height: "50dp"
    OneUITextField:
        id: combo_field
        border_color: [1, 1, 1, 1]
        hint_text: root.placeholder
        size_hint_y: None
        height: root.height
        on_focus: if self.focus: root.release()
        on_text: lambda x: search(x)
    MDIconButton:
        id: combo_button
        theme_text_color: "Custom"
        text_color: 0, 0, 0, 0.5
        icon: "assets/images/text/up-down-arrows.png"
        on_release: root.release()
        size_hint_y: None
        height: root.height
